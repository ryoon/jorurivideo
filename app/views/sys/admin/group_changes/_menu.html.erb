<% if params[:action] == 'index' %>
<span class="separator"></span>
<%= link_to '組織設定', sys_group_changes_path %>
<%= link_to 'コンテンツデータ', sys_group_change_item_temporaries_path(0, :video_clip) %>
<% end %>
</div>
