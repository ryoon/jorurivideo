<h2>組織変更 - 組織設定</h2>

<div class="actionMenu">
<%= action_menu :new %>
<%= action_menu :index %>
<%= action_menu :show %>
<%= action_menu :edit    if safe{@item.editable?} %>
<%= action_menu :destroy if safe{@item.deletable?} %>

<%= action_menu :new, ['データ取り込み', sys_import_group_changes_path] %>
