<%= javascript_include_tag '/_common/js/yui/build/connection/connection-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/treeview/treeview-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/datasource/datasource-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/dom/dom-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/event/event-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/container/container-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/menu/menu-min.js' %>
<%= javascript_include_tag '/_common/js/yui/build/animation/animation-min.js' %>

<%= csrf_meta_tag %>
<%#= javascript_include_tag '/_common/js/prototype' %>
<%#= javascript_include_tag '/_common/modules/cms/js/admin/form.js' %>
<%#= stylesheet_link_tag '/_common/themes/admin/style', :media => 'all' %>

<%= stylesheet_link_tag '/_common/js/yui/build/fonts/fonts-min.css', :media => 'all' %>
<%= stylesheet_link_tag '/_common/js/yui/build/calendar/assets/calendar.css', :media => 'all' %>
<%= stylesheet_link_tag '/_common/js/yui/build/menu/assets/menu.css', :media => 'all' %>
<%= stylesheet_link_tag '/_common/js/yui/build/container/assets/skins/sam/container.css', :media => 'all' %>
<%= stylesheet_link_tag '/_common/js/yui/build/calendar/assets/skins/sam/calendar.css', :media => 'all' %>
<%= stylesheet_link_tag '/_common/js/yui/build/button/assets/skins/sam/button.css', :media => 'all' %>
<%= stylesheet_link_tag '/_common/js/yui/build/treeview/assets/skins/sam/treeview.css', :media => 'all' %>

<%= stylesheet_link_tag '/_common/themes/admin/video/style', :media => 'all' %>
<%= stylesheet_link_tag '/_common/themes/admin/video/print', :media => 'print' %>
</head>
<body><a id="top" name="top"></a>

<div id="container">

<div id="header">
<div id="headerContainer">

  <h1><a href="/_admin">Joruri Video</a></h1>
  <div class="menu">
    <span class="user"><%= safe{Core.user_group.name} %>　<%=h safe{Core.user.name_with_account} %></span>
    <span class="link">
      <a class="logout" href="/_admin/logout">ログアウト</a>
    </span>
  <span class="previousLogin">
    前回ログイン日時　<%= safe{Core.user.previous_login_date} ? safe{Core.user.previous_login_date.strftime('%Y-%m-%d %H:%M')} : '---'%>
  </span>
  </div>

<!-- /#headerContainer --></div>
<!-- /#header --></div>

<div id="banner">
<div id="bannerContainer">

<!-- /#bannerContainer --></div>
<!-- /#banner --></div>

<div id="navi">
<div id="naviContainer">

<!-- /#navigationContainer --></div>
<!-- /#navigation --></div>

<div id="main">

<%= render :partial => 'layouts/admin/video/maintenance' %>
<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>

<div id="content">
<div id="contentContainer">

<div id="contentHeader">
  <div id="contentTitle">
    <h2 class="title">動画</h2>
  </div>
  <%= render :partial => controller.controller_path + '/header' %>
</div>

<div id="contentBody">
<%= yield  %>
</div>

<div id="contentFooter"></div>

<!-- /#contentContainer --></div>
<!-- /#content --></div>

<div id="menu">
<div id="menuContainer">

<!-- /#menuContainer --></div>
<!-- /#menu --></div>

<!-- /#main --></div>

<div id="footer">
<div id="footerContainer">

<!--<%#= :footer %>-->

<div id="footerHeader"></div>
<div id="footerBody">
<div class="copyright">
  <a href="http://joruri.org" target="_blank"><img src="/_common/themes/admin/video/images/bt/powered.gif"></a>
  <!--<%= link_to "接続情報", "/_admin/gw/siteinfo", :target => "_blank", :class => "siteinfo" %></div>-->
</div>
<div id="footerFooter"></div>

<!-- /#footerContainer --></div>
<!-- /#footer --></div>

<!-- /#container --></div>

</body>
</html>
