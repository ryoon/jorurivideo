<table class="index">

  <tr>
    <th style="width: 60px; text-align: right;">動画ID</th>
    <th style="width: ;">タイトル</th>
    <th style="width: 20%; text-align: center;">所属/投稿者</th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 120px; text-align: center;">管理区分/公開範囲</th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: right;"><%=h item.item_id %></td>
    <td><%=h safe{item.entity.title} %></td>
    <td><%=h safe{item.entity.creator.group.name} %>/<%= safe{item.entity.creator.name} %></td>
    <td style="text-align: center;"><%= safe{item.entity.updated_at.strftime("%Y-%m-%d %H:%M")} %></td>
    <td style="text-align: center;"><%= safe{item.entity.editting_status.name} %>/<%= safe{item.entity.status.name} %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
